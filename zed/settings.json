{
  "icon_theme": "Material Icon Theme",
  "toolbar": {
    "quick_actions": false
  },
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "tab_bar": {
    "show": false
  },
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "shell": "system",
    "line_height": { "custom": 1.25 }
  },
  "project_panel": {
    "dock": "left",
    "indent_size": 10
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-4-sonnet"
    },
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.0-flash-001"
    }
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "agent_font_size": 16,
  "ui_font_family": "IosevkaTerm Nerd Font",
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "theme": {
    "light": "Kanagawa Lotus",
    "dark": "Gentleman Sakura Night Sober Blur"
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  }
}
